{
  "name": "smart-purchase-slip",
  "version": "2.0.0",
  "description": "Smart Purchase Slip - Rice Mill Management System",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win"
  },
  "keywords": [
    "smart-purchase-slip",
    "rice-mill",
    "purchase-slip",
    "desktop"
  ],
  "author": "Smart Purchase Slip",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.smartpurchaseslip.app",
    "productName": "Smart Purchase Slip",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "backup.js",
      "app.html",
      "login.html",
      "splash.html",
      "assets/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../dist-backend",
        "to": "dist-backend",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../config.json",
        "to": "config.json"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/spslogo.ico"
    },
    "mac": {
      "icon": "assets/spslogo.ico"
    },
    "linux": {
      "icon": "assets/spslogo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/spslogo.ico",
      "uninstallerIcon": "assets/spslogo.ico",
      "license": "../LICENSE.txt"
    }
  },
  "dependencies": {
    "googleapis": "^167.0.0",
    "module-name": "^0.0.1-security"
  }
}
